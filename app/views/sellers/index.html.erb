<h1>Listing sellers</h1>

<table>
  <tr>
    <th>Company name</th>
    <th>Type of company</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Address</th>
    <th>Postal code</th>
    <th>City</th>
    <th>Country</th>
    <th>Telephone number</th>
    <th>Email</th>
    <th>Password</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sellers.each do |seller| %>
  <tr>
    <td><%= seller.company_name %></td>
    <td><%= seller.type_of_company %></td>
    <td><%= seller.first_name %></td>
    <td><%= seller.last_name %></td>
    <td><%= seller.address %></td>
    <td><%= seller.postal_code %></td>
    <td><%= seller.city %></td>
    <td><%= seller.country %></td>
    <td><%= seller.telephone_number %></td>
    <td><%= seller.email %></td>
    <td><%= seller.password %></td>
    <td><%= link_to 'Show', seller %></td>
    <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
    <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

